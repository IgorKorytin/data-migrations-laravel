{
    "name": "avto-dev/data-migrations-laravel",
    "description": "Package for data migrations in laravel applications",
    "keywords": [
        "laravel",
        "data",
        "migration"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "avto-dev",
            "homepage": "https://github.com/avto-dev"
        }
    ],
    "require": {
        "php": ">=7.0",
        "laravel/framework": ">=5.5.0 <5.8.0"
    },
    "require-dev": {
        "ext-pdo_sqlite": "*",
        "ext-sqlite3": "*",
        "ext-zlib": "*",
        "avto-dev/dev-tools": "^1.6",
        "laravel/laravel": ">=5.5.0 <5.8.0",
        "mockery/mockery": "^0.9.5 || ~1.0",
        "phpunit/phpunit": "~6.0 || ~7.0",
        "phpstan/phpstan": "~0.9 || ^0.10"
    },
    "autoload": {
        "psr-4": {
            "AvtoDev\\DataMigrationsLaravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AvtoDev\\DataMigrationsLaravel\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "@php ./vendor/bin/phpunit --no-coverage",
        "test-cover": "@php ./vendor/bin/phpunit --coverage-html='./coverage/html'",
        "phpstan": "@php ./vendor/bin/phpstan analyse --level=1 ./src"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AvtoDev\\DataMigrationsLaravel\\DataMigrationsServiceProvider"
            ]
        }
    },
    "suggest": {
        "ext-zlib": "PHP ZLib extension for a working with compressed (gzip-ed) files"
    },
    "support": {
        "issues": "https://github.com/avto-dev/data-migrations-laravel/issues",
        "source": "https://github.com/avto-dev/data-migrations-laravel"
    },
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
